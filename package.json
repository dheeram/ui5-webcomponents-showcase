{
  "name": "ui5-webcomponents-showcase",
  "version": "0.0.1",
  "description": "A repository, showcasing the consumption of UI5 Web Components as UI5 Controls",
  "private": true,
  "scripts": {
    "start": "npm-run-all build:webclib --parallel start:webc start:xml",
    "start:webc": "cd packages/ui5-app/webcomponents && npm start",
    "start:xml": "cd packages/ui5-app/xmlcontrols && npm start",
    "build:webclib": "packages/ui5-webcomponents-lib && npm-run-all rollup build"
  },
  "workspaces": [
    "packages/ui5-app/webcomponents",
    "packages/ui5-app/xmlcontrols",
    "packages/ui5-webcomponents-lib"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
