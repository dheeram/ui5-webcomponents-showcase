<mvc:View controllerName="test.Sample.controller.Main" 
	displayBlock="true" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout" 
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>appTitle}">
		<headerContent>
			<core:Icon color="#1873B4" 
				src="sap-icon://sap-ui5" 
				size="2rem" />
			<Text text="{LatestUI5>/latest}" />
		</headerContent>
		<content>
			<l:BlockLayout background="Light">
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<Title level="H1" 
							titleStyle="H1" 
							text="UI5 Webcomponents" 
							width="100%" 
							textAlign="Center" />
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="2">
						<VBox width="100%" 
							alignItems="Center">

							<Button text="{i18n>startPage.uploadButton.text}" 
								id="UploadButton" 
								press="handleUploadPress" />
						</VBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<List id="ListOfItems" 
							headerText="TripIt OData v4 people" 
							items="{Backend>/People}">
							<items>
								<StandardListItem title="{Backend>FirstName} {Backend>LastName}" />
							</items>
						</List>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<VBox>
							<Text text="preview" 
								class="sapUiSmallMarginBottom" />
							<Image id="PreviewImage" 
								src="{PreviewImg>/imgSrc}" 
								decorative="false" />
						</VBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>

			</l:BlockLayout>
		</content>
	</Page>

</mvc:View>